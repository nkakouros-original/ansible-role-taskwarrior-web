[Unit]
Description = A web interface for the Taskwarrior todo application.
After=network.target

[Service]
Type=simple
User={{ taskweb_user }}
ExecStart={{ taskweb_gem_path }}/gems/taskwarrior-web-{{ taskweb_version }}/bin/task-web -o {{ taskweb_host }} -p {{ taskweb_port }} -L -F
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
